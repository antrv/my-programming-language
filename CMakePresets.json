{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 2,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/.tmp/${presetName}",
            "installDir": "${sourceDir}/.install/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_MANIFEST_INSTALL": "ON",
                "VCPKG_MANIFEST_MODE": "ON",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/.bin/${presetName}/$<CONFIG>"
            }
        },
        {
            "name": "windows-x64",
            "inherits": "base",
            "generator": "Visual Studio 18 2026",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-x64",
            "inherits": "base",
            "generator": "Ninja Multi-Config",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "mac",
            "inherits": "base",
            "generator": "Xcode",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64-debug",
            "displayName": "Windows x64 (Debug)",
            "configurePreset": "windows-x64",
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-x64-release",
            "displayName": "Windows x64 (Release)",
            "configurePreset": "windows-x64",
            "configuration": "Release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-x64-debug",
            "displayName": "Linux x64 (Debug)",
            "configurePreset": "linux-x64",
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-x64-release",
            "displayName": "Linux x64 (Release)",
            "configurePreset": "linux-x64",
            "configuration": "Release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "mac-debug",
            "displayName": "MacOS (Debug)",
            "configurePreset": "mac",
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "mac-release",
            "displayName": "MacOS (Release)",
            "configurePreset": "mac",
            "configuration": "Release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ],
    "testPresets": [
        {
            "name": "base",
            "hidden": true,
            "environment": {
                "CTEST_OUTPUT_ON_FAILURE": "1"
            }
        },
        {
            "name": "windows-x64",
            "inherits": "base",
            "displayName": "Windows x64",
            "configurePreset": "windows-x64",
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-x64",
            "inherits": "base",
            "displayName": "Linux x64",
            "configurePreset": "linux-x64",
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "mac",
            "inherits": "base",
            "displayName": "MacOS",
            "configurePreset": "mac",
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ]
}
